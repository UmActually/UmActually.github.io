---
import '../styles/global.css';

import Page from '../layouts/Page.astro';
import NameHeader from "../components/NameHeader.astro";
import ProjectCard from "../components/ProjectCard.astro";
import JobProjectCard from "../components/JobProjectCard.astro";
import ShowMoreButton from "../components/ShowMoreButton.astro";
import CertificationCard from "../components/CertificationCard.astro";

import allProjects from '../data/projects.json';
import { certifications } from "../data/certifications.ts";

import tecLogo from '../assets/tec-black.png';
import appleLogo from '../assets/apple-black.svg';
import swiftLogo from '../assets/swift-black.png';
import pythonLogo from '../assets/python-black.png';
import svelteLogo from '../assets/svelte-black.png';
import type { Project } from "../data/types";

const jobProjects: Project[] = allProjects.filter((p) => p.job);
const projects: Project[] = allProjects.filter((p) => !p.job);
---

<Page title="Leonardo Corona-Garza">
	<NameHeader />

	<h2 class="container">About Me</h2>

	<p class="container about-me margin-top">
		Computer engineer graduated from <span class="bold"><img src={tecLogo.src} alt="<Tec de Monterrey logo>" style="translate: 0 2px;"> Tec de Monterrey</span> in 2025.<br><br>
		My major interest is development for <span class="bold"><img src={appleLogo.src} alt="<Apple logo>" style="translate: 0 1px;"> Apple platforms</span>.
		5 years of experience with the <span class="bold"><img src={swiftLogo.src} alt="<Swift logo>" style="translate: 0 1px;"> Swift language</span> and front-end development in SwiftUI. Currently learning to take full advantage of frameworks like CoreAnimation, UIKit & Combine.<br><br>
		I've led small <span class="bold">agile development teams</span> for full-stack web projects. 2 years of experience in technologies like <span class="bold"><img src={pythonLogo.src} alt="<Python logo>" style="translate: 0 2px;"> Django</span> by building production REST services, and <span class="bold"><img src={svelteLogo.src} alt="<Svelte logo>" style="translate: 0 2px;"> Svelte</span> & <span class="bold">Next.js</span>, for front-end.<br><br>
		Solid understanding of topics like software requirements & life cycles, cybersecurity, networks, and operating systems.
		Self-taught background in music, design and audiovisual editing as well.
	</p>

	<div class="container margin-top">
		<h2>Work Experience</h2>
		<p class="small-margin-top monaspace">Click on an item for details, or <a href="/projects" class="local-link">see all projects ›</a></p>
	</div>

	{jobProjects.map((project) => (
		<JobProjectCard project={project} />
	))}

	<div class="container margin-top">
		<h2>Projects</h2>
		<p class="small-margin-top monaspace">Click on an item for details, or <a href="/projects" class="local-link">see all projects ›</a></p>
	</div>

	<div id="projects">
		{projects.map((project, index) => (
			<ProjectCard project={project} index={index} />
		))}
	</div>

	<ShowMoreButton/>

	<div class="container margin-top">
		<h2>Licenses & Certifications</h2>
	</div>

	<div id="certifications">
		{certifications.map((cert) => (
			<CertificationCard cert={cert} />
		))}
	</div>
</Page>

<style>
	.about-me {
		color: var(--fg-secondary);
	}

	.about-me > .bold {
		color: var(--fg-primary);
	}
</style>